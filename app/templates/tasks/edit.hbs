<form action="">
    <div class="form-group">
        <label for="">Title</label>
      {{input type="text" class="form-control" value=model.title placeholder="Add Task.."}}
    </div>
    <div class="form-group">
        <label for="">Due Date</label>
      {{input type="date" class="form-control" value=model.date}}
    </div>
    <div class="form-group">
        <label for="">Description</label>
      {{textarea  class="form-control" value=model.description placeholder="Describe Tasks..."}}
    </div>
    <button {{action 'editTask' model.id}} class="btn btn-primary">Submit</button>
</form>